<Window x:Class="DocumentDownloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DocumentDownloader"
        xmlns:vm="clr-namespace:DocumentDownloader.ViewModels"
        mc:Ignorable="d"
        Title="Document Downloader" 
        Height="800" Width="1100"
        MinHeight="600" MinWidth="900"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    
    <Window.Resources>
        <!-- Styles -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
        
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#555"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        
        <Style x:Key="InputStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="#CCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>
        
        <Style x:Key="PasswordStyle" TargetType="PasswordBox">
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderBrush" Value="#CCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>
        
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CCC"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#106EBE"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#E1E1E1"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D1D1D1"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="DangerButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#D83B01"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CCC"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#A52A00"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="16"/>
        </Style>
        
        <!-- Converters -->
        <local:LogLevelToColorConverter x:Key="LogLevelToColorConverter"/>
        <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>
    
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Style="{StaticResource CardStyle}" Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel>
                    <TextBlock Text="Document Downloader" FontSize="24" FontWeight="Bold" Foreground="#0078D4"/>
                    <TextBlock Text="Download documents from database with duplicate detection" 
                               FontSize="12" Foreground="#666" Margin="0,4,0,0"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Ellipse Width="12" Height="12" Margin="0,0,8,0">
                        <Ellipse.Style>
                            <Style TargetType="Ellipse">
                                <Setter Property="Fill" Value="#CCC"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                        <Setter Property="Fill" Value="#107C10"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Ellipse.Style>
                    </Ellipse>
                    <TextBlock Text="{Binding ConnectionStatus}" VerticalAlignment="Center" FontSize="12"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Connection Settings -->
        <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,0,0,16">
            <StackPanel>
                <TextBlock Text="Connection Settings" Style="{StaticResource HeaderTextStyle}"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="16"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="16"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Row 1 -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Server Name" Style="{StaticResource LabelStyle}"/>
                    <TextBox Grid.Row="1" Grid.Column="0" Text="{Binding ServerName, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource InputStyle}" ToolTip="e.g., localhost or server.database.windows.net"/>
                    
                    <TextBlock Grid.Row="0" Grid.Column="2" Text="Database Name" Style="{StaticResource LabelStyle}"/>
                    <TextBox Grid.Row="1" Grid.Column="2" Text="{Binding DatabaseName, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource InputStyle}"/>
                    
                    <TextBlock Grid.Row="0" Grid.Column="4" Text="User ID" Style="{StaticResource LabelStyle}"/>
                    <TextBox Grid.Row="1" Grid.Column="4" Text="{Binding UserId, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource InputStyle}"/>
                    
                    <TextBlock Grid.Row="0" Grid.Column="6" Text="Password" Style="{StaticResource LabelStyle}"/>
                    <PasswordBox Grid.Row="1" Grid.Column="6" x:Name="PasswordBox" 
                                 Style="{StaticResource PasswordStyle}" PasswordChanged="PasswordBox_PasswordChanged"/>
                    
                    <!-- Row 2 -->
                    <TextBlock Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="5" Text="Output Folder" Style="{StaticResource LabelStyle}"/>
                    <Grid Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Text="{Binding OutputFolder, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource InputStyle}" ToolTip="e.g., C:\DownloadedDocuments"/>
                        <Button Grid.Column="1" Content="Browse..." Command="{Binding BrowseFolderCommand}" 
                                Style="{StaticResource SecondaryButtonStyle}" Margin="8,0,0,0"/>
                    </Grid>
                    
                    <StackPanel Grid.Row="4" Grid.Column="6" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Test Connection" Command="{Binding TestConnectionCommand}" 
                                Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,8,0"/>
                        <Button Content="Start Download" Command="{Binding StartDownloadCommand}" 
                                Style="{StaticResource PrimaryButtonStyle}" Margin="0,0,8,0"/>
                        <Button Content="Cancel" Command="{Binding CancelDownloadCommand}" 
                                Style="{StaticResource DangerButtonStyle}"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>
        
        <!-- Main Content Area -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="1.5*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Progress Table -->
            <Border Grid.Column="0" Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Download Progress" Style="{StaticResource HeaderTextStyle}"/>
                    
                    <DataGrid Grid.Row="1" ItemsSource="{Binding ProgressItems}" 
                              AutoGenerateColumns="False" IsReadOnly="True"
                              HeadersVisibility="Column" GridLinesVisibility="Horizontal"
                              BorderThickness="1" BorderBrush="#E0E0E0"
                              RowHeight="32" ColumnHeaderHeight="36"
                              Background="White" AlternatingRowBackground="#FAFAFA">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="*"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="80"/>
                            <DataGridTextColumn Header="Total" Binding="{Binding TotalDocuments}" Width="50"/>
                            <DataGridTextColumn Header="OK" Binding="{Binding SuccessCount}" Width="40"/>
                            <DataGridTextColumn Header="Fail" Binding="{Binding FailedCount}" Width="40"/>
                            <DataGridTextColumn Header="Dup" Binding="{Binding SkippedDuplicates}" Width="40" 
                                                ToolTipService.ToolTip="Duplicates Skipped"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    
                    <!-- Summary -->
                    <Border Grid.Row="2" Background="#F0F0F0" Padding="12" Margin="0,12,0,0" CornerRadius="4">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                <TextBlock Text="{Binding TotalDocuments}" FontSize="20" FontWeight="Bold" 
                                           HorizontalAlignment="Center" Foreground="#0078D4"/>
                                <TextBlock Text="Total" FontSize="11" Foreground="#666" HorizontalAlignment="Center"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                <TextBlock Text="{Binding SuccessfulDownloads}" FontSize="20" FontWeight="Bold" 
                                           HorizontalAlignment="Center" Foreground="#107C10"/>
                                <TextBlock Text="Success" FontSize="11" Foreground="#666" HorizontalAlignment="Center"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                <TextBlock Text="{Binding FailedDownloads}" FontSize="20" FontWeight="Bold" 
                                           HorizontalAlignment="Center" Foreground="#D83B01"/>
                                <TextBlock Text="Failed" FontSize="11" Foreground="#666" HorizontalAlignment="Center"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                                <TextBlock Text="{Binding DuplicatesSkipped}" FontSize="20" FontWeight="Bold" 
                                           HorizontalAlignment="Center" Foreground="#8A8886"/>
                                <TextBlock Text="Duplicates" FontSize="11" Foreground="#666" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
            
            <!-- Log Panel -->
            <Border Grid.Column="2" Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <Grid Grid.Row="0" Margin="0,0,0,8">
                        <TextBlock Text="Activity Log" Style="{StaticResource HeaderTextStyle}"/>
                        <Button Content="Clear" Command="{Binding ClearLogCommand}" 
                                Style="{StaticResource SecondaryButtonStyle}" 
                                HorizontalAlignment="Right" Padding="8,4"/>
                    </Grid>
                    
                    <ListBox Grid.Row="1" ItemsSource="{Binding LogEntries}" 
                             BorderThickness="1" BorderBrush="#E0E0E0"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             Background="White">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="4,2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="70"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Grid.Column="0" Text="{Binding Timestamp, StringFormat=HH:mm:ss}" 
                                               FontSize="11" Foreground="#888" VerticalAlignment="Top"/>
                                    
                                    <Border Grid.Column="1" Padding="4,1" Margin="0,0,8,0" CornerRadius="2"
                                            Background="{Binding Level, Converter={StaticResource LogLevelToColorConverter}}">
                                        <TextBlock Text="{Binding Category}" FontSize="10" Foreground="White"/>
                                    </Border>
                                    
                                    <TextBlock Grid.Column="2" Text="{Binding Message}" FontSize="12" 
                                               TextWrapping="Wrap" Foreground="#333"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>
        </Grid>
        
        <!-- Status Bar -->
        <Border Grid.Row="3" Background="#0078D4" Padding="12,8" Margin="0,16,0,0" CornerRadius="4">
            <Grid>
                <TextBlock Text="{Binding StatusMessage}" Foreground="White" FontSize="12"/>
                <ProgressBar IsIndeterminate="{Binding IsDownloading}" 
                             HorizontalAlignment="Right" Width="120" Height="4"
                             Visibility="{Binding IsDownloading, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            </Grid>
        </Border>
    </Grid>
</Window>
